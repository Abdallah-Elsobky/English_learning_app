<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FootballersActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colorback" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:background="@drawable/text_bk"
        android:backgroundTint="#4E4B4C"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageView
                android:id="@+id/ronaldo"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#CE916A2D"
                android:padding="20dp"
                app:srcCompat="@drawable/ronald" />

            <ImageView
                android:id="@+id/messi"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#9A974F3C"
                android:padding="20dp"
                app:srcCompat="@drawable/messi" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageView
                android:id="@+id/ronaldinho"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#9A161616"
                android:padding="20dp"
                app:srcCompat="@drawable/ronaldinho" />

            <ImageView
                android:id="@+id/neymar"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#BC372D34"
                android:padding="20dp"
                app:srcCompat="@drawable/neymar" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageView
                android:id="@+id/mbappe"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#9970A2A6"
                android:padding="20dp"
                app:srcCompat="@drawable/mbappe" />

            <ImageView
                android:id="@+id/marcelo"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#99798735"
                android:padding="20dp"
                app:srcCompat="@drawable/marcelo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:weightSum="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/suiii"
                    android:layout_height="62dp"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_bk"
                    android:fontFamily="sans-serif-black"
                    android:text="Suiiiiiiiiiiii"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#2D2D2D"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:fontFamily="sans-serif-black"
        android:text="Players"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>