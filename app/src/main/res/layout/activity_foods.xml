<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_atop"
    tools:context=".FoodsActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/colorback" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:background="@drawable/text_bk"
        android:backgroundTint="#4E4B4C"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageView
                android:id="@+id/steak"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#80F9B890"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/steak" />

            <ImageView
                android:id="@+id/chicken"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#80D28131"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/chicken" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageView
                android:id="@+id/fish"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#80015081"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/fish" />

            <ImageView
                android:id="@+id/chrimp"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#80E0322D"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/chrimp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageView
                android:id="@+id/pizza"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#80FAA582"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/pizza" />

            <ImageView
                android:id="@+id/hamburger"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#80FD9638"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/hamburger" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2">

            <ImageView
                android:id="@+id/sushi"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#806E352A"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/sushi" />

            <ImageView
                android:id="@+id/spaghettti"
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton_bk"
                android:backgroundTint="#80FBF0A7"
                android:backgroundTintMode="src_over"
                android:padding="20dp"
                app:srcCompat="@drawable/food" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:fontFamily="sans-serif-black"
        android:text="Food Category"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>